{# Plantilla de nuestra aplicaci√≥n #}
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{# Contenido de la aplicacion #}
{% block body %}

<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <h1 class="mt-4 mb-3">Bar Paco 
    <small>Login de Usuario</small>
  </h1>



    <div class="row">
      <div class="col-lg-6">
        {% if error %}
          <h3>{{ error.messageKey|trans(error.messageData, 'security') }}</h3>
        {% endif %}
       <form action="{{ path('login') }}" method="post">

       <div class="control-group form-group">
         <div class="controls">
          <label for="username">Username:</label>
          <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}"/>
         </div>
       </div>

       <div class="control-group form-group">
         <div class="controls">
          <label for="password">Password:</label>
          <input type="password" class="form-control" id="password" name="_password"/>
         </div>
        </div> 
        <div class="control-group form-group">
          <div class="controls">
          <button class="btn btn-primary" type="submit">login</button>
          </div>
        </div> 
            
      </form>
      </div>      
    </div>
 
 
 </div> 
{% endblock %}